<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.muhammadpen.blueme.MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="9dp"
            android:ems="10"
            android:hint="Search"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/searchButton"
            style="@android:style/Widget.Material.Light.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/searchEditText"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="7dp"
            android:onClick="searchButtonPressed"
            app:srcCompat="@drawable/ic_search_black_24dp" />

        <TextView
            android:id="@+id/featuredTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/searchEditText"
            android:layout_below="@+id/searchEditText"
            android:layout_marginStart="7dp"
            android:layout_marginTop="14dp"
            android:text="Popular Videos"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/searchEditText"
            android:layout_below="@+id/featuredTextView"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp">

            <VideoView
                android:id="@+id/vid1"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_column="0"
                android:layout_columnWeight="0"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:layout_rowWeight="0" />

            <VideoView
                android:id="@+id/vid2"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_column="1"
                android:layout_columnWeight="0"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:layout_rowWeight="0" />

            <VideoView
                android:id="@+id/vid3"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_column="0"
                android:layout_columnWeight="0"
                android:layout_margin="5dp"
                android:layout_row="1"
                android:layout_rowWeight="0" />

            <VideoView
                android:id="@+id/vid4"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_column="1"
                android:layout_columnWeight="0"
                android:layout_margin="5dp"
                android:layout_row="1"
                android:layout_rowWeight="0" />

            <VideoView
                android:id="@+id/vid5"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_column="0"
                android:layout_columnWeight="0"
                android:layout_margin="5dp"
                android:layout_row="2"
                android:layout_rowWeight="0" />

            <VideoView
                android:id="@+id/vid6"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_column="1"
                android:layout_columnWeight="0"
                android:layout_margin="5dp"
                android:layout_row="2"
                android:layout_rowWeight="0" />


        </GridLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/splashScreenImageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/splashScreenBackgroungCOlor"
        android:contentDescription="Splash Screen for app"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blueme_splash" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <VideoView
            android:id="@+id/card1VideoView"
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <VideoView
            android:id="@+id/card2VideoView"
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:layout_alignStart="@+id/card1"
            android:layout_below="@+id/card1"
            android:layout_marginTop="5dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <VideoView
            android:id="@+id/card3VideoView"
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:layout_alignStart="@+id/card2"
            android:layout_below="@+id/card2"
            android:layout_marginTop="5dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:foreground="@drawable/image1"
            android:onClick="card1Pressed"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardElevation="5dp">

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:layout_alignStart="@+id/card1"
            android:layout_below="@+id/card1"
            android:layout_marginTop="5dp"
            android:elevation="5dp"
            android:foreground="@drawable/image2"
            android:onClick="card2Pressed"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="242dp">

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card3"
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:layout_alignStart="@+id/card2"
            android:layout_below="@+id/card2"
            android:layout_marginTop="5dp"
            android:elevation="5dp"
            android:foreground="@drawable/image3"
            android:onClick="card3Pressed"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="378dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
