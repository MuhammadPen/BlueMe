<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.muhammadpen.blueme.MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/splashScreenImageView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/splashScreenBackgroungCOlor"
            android:contentDescription="Splash Screen for app"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/blueme_splash" />

        <VideoView
            android:id="@+id/card1VideoView"
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <VideoView
            android:id="@+id/card2VideoView"
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:layout_alignStart="@+id/card1"
            android:layout_below="@+id/card1"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:foreground="@drawable/image1"
            android:onClick="card1Pressed"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardElevation="5dp">

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:layout_alignStart="@+id/card1"
            android:layout_below="@+id/card1"
            android:layout_marginTop="5dp"
            android:elevation="5dp"
            android:foreground="@drawable/image2"
            android:onClick="card2Pressed"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="242dp">

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card3"
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:layout_alignStart="@+id/card2"
            android:layout_below="@+id/card2"
            android:layout_marginTop="10dp"
            android:elevation="5dp"
            android:foreground="@drawable/image3"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="378dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
